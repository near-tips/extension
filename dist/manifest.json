{
  "name": "Near tips",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Use NEAR for tipping somebody in social networks",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Near Tips",
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "icons/near-logo.svg",
    "icons/teajs-logo.png",
    "popup.html"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.stackoverflow.com/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ]
}